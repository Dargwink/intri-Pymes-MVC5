@model IEnumerable<Entity.Inventario>

@{
    ViewBag.Title = "Lista de Inventario";
    Layout = "~/Views/Shared/_Menubar.cshtml";
}


<div class="container" style="position:relative; top:20px; right:-170px; width:1000px">
    <div class="well well-sm">
        <div class="row">
            <div class="col-md-6">
                <h2>Inventario</h2>

                <div class="col-xs-2 text-right">
                    <a class="btn btn-primary" href="~/Inventario/Create">Nuevo registro</a>
                </div>
            </div>
        </div>
    </div>
    <table id="grid" class="table table-bordered">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CantidaExistencia)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Producto.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoInventario.NombresTipoInventario)
            </th>
            <th></th>
        </tr>
            </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidaExistencia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.NombreProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoInventario.NombresTipoInventario)
                </td>

                <td class="text-left">
                    <a class="btn btn-danger" href="~/Inventario/Delete/@item.IdInventario" title="Eliminar">
                        <i class="glyphicon glyphicon-floppy-remove"></i>
                    </a>
                    <a class="btn btn-success" href="~/Inventario/Details/@item.IdInventario" title="Visualizar">
                        <i class="glyphicon glyphicon-eye-open"></i>
                    </a>
                    <a class="btn btn-default" href="~/Inventario/Edit/@item.IdInventario" title="Editar">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                </td>
            </tr>
        }
            </tbody>
    </table>
    </div>